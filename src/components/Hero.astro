---
import { Image } from 'astro:assets';
import IconChevronDown from '/public/images/icons/chevron-down.svg';
---

<section class="hero">
  <div class="hero__container">
    <p class="hero__text">Futa Sato's Portfolio Web Site</p>
    <a href="#about" class="hero__link c-text-link">
      <span>View this site</span>
      <Image src={IconChevronDown} alt="" />
    </a>
  </div>
</section>

<style lang="scss">
.hero {
  margin-bottom: rem(100px);
  &__container {
    width: 100%;
    height: 100vh;
    height: 100dvh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: rem(100px);
  }
  &__text {
    font-size: rem(60px);
    font-weight: bold;
  }
  &__link {
    display: flex;
    align-items: center;
    gap: rem(40px);
    cursor: pointer;
    span {
      font-size: rem(30px);
      font-weight: bold;
    }
    img {
      color: #000;
      width: rem(40px);
      height: rem(40px);
    }
  }
}
</style>